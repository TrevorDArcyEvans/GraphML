{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AspIdUsers.db;"
  },

  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "https://localhost:44387"
      }
    }
  },

  "Identity_Server": {
    "Ids": [
      {
        "Name": "appuser_claim",
        "ClaimTypes": [ "appuser_claim" ]
      }
    ],

    "Apis": [
      {
        "Name": "identityApi",
        "DisplayName": "Identity Claims Api",
        "ClaimTypes": [ "appuser_claim", "email", "email_verified", "website" ]
      }
    ],

    "Clients": [
      {
        "ClientId": "BlazorID_App",
        "ClientName": "Blazor Server App - Identity Claims",
        "ClientSecrets": [ "secret" ],
        "RedirectUris": [ "https://localhost:5002/signin-oidc" ],
        "AllowedCorsOrigins": [ "https://localhost:5002" ],
        "PostLogoutRedirectUris": [ "https://localhost:5002/signout-callback-oidc" ],
        "AllowedScopes": [ "openid", "profile", "email", "identityApi", "appuser_claim" ]
      },
      {
        "ClientId": "graphml_api_swagger",
        "ClientName": "Swagger UI for GraphML API",
        "ClientSecrets": [ "secret" ],
        "RedirectUris": [ "https://localhost:5001/swagger/oauth2-redirect.html" ],
        "AllowedCorsOrigins": [ "https://localhost:5001" ],
        "PostLogoutRedirectUris": [ "https://localhost:5001/swagger" ],
        "AllowedScopes": [ "identityApi" ]
      }
    ]
  }
}
