@page "/BrowseResults/{OrganisationId}/{OrganisationName}/{RepositoryManagerId}/{RepositoryManagerName}/{RepositoryId}/{RepositoryName}/{GraphId}/{GraphName}"

@attribute [Authorize]

@using Flurl
@using System.Web;
@using GraphML.UI.Web.Widgets
@using GraphML.API.Controllers
@using GraphML.Common
@using GraphML.Interfaces.Server
@using Microsoft.AspNetCore.Http
@using Microsoft.Extensions.Configuration

@inject IHttpContextAccessor _context
@inject IContactServer _contactServer
@inject IResultServer _resultServer
@inject IConfiguration _config
@inject NavigationManager _navMgr

<b>Results</b>
<p/>
<span class="bread-crumb-trail">
  <Breadcrumb>
    <BreadcrumbItem>
      <BreadcrumbLink To="/BrowseOrganisations">Organisations</BreadcrumbLink>
    </BreadcrumbItem>
    <BreadcrumbItem>
      <BreadcrumbLink To="@($"/BrowseRepositoryManagers/{OrganisationId}/{OrganisationName}")">@HttpUtility.UrlDecode(@OrganisationName)</BreadcrumbLink>
    </BreadcrumbItem>
    <BreadcrumbItem>
      <BreadcrumbLink To="@($"/BrowseRepositories/{OrganisationId}/{OrganisationName}/{RepositoryManagerId}/{RepositoryManagerName}")">@HttpUtility.UrlDecode(@RepositoryManagerName)</BreadcrumbLink>
    </BreadcrumbItem>
    <BreadcrumbItem>
      <BreadcrumbLink To="@($"/BrowseGraphs/{OrganisationId}/{OrganisationName}/{RepositoryManagerId}/{RepositoryManagerName}/{RepositoryId}/{RepositoryName}")">@HttpUtility.UrlDecode(@RepositoryName)</BreadcrumbLink>
    </BreadcrumbItem>
    <BreadcrumbItem Active="true">
      <BreadcrumbLink To="#">@HttpUtility.UrlDecode(@GraphName)</BreadcrumbLink>
    </BreadcrumbItem>
  </Breadcrumb>
</span>

<SpinLoader IsLoading="@_isBusy">
  <LoadingTemplate>
    <GraphMLSpinner/>
  </LoadingTemplate>
  <ContentTemplate>

    <div>
      <MatTable
        Items="@_requests"
        ApiUrl="@Url.Combine(@_config.API_URI(), "api", "Result", nameof(ResultController.ByGraph), GraphId)"
        Striped="true"
        AllowSelection="true"
        class="mat-elevation-z5">
        <MatTableHeader>
          <th>Description</th>
          <th>JobType</th>
          <th>CorrelationId</th>
          <th>Created By</th>
          <th>CreatedOnUtc</th>
          <th>View</th>
        </MatTableHeader>
        <MatTableRow>
          <td>@context.Description</td>
          <td>@context.JobType</td>
          <td>@context.CorrelationId</td>
          <td>@context.Contact.Name</td>
          <td>@context.CreatedOnUtc</td>
          <td>
            <MatButton Icon="pageview" @onclick="@(e => OnShowResult(@context.CorrelationId))"></MatButton>
          </td>
          <td>
            <MatTooltip Tooltip="Delete" Context="subContext">
              <MatButton Icon="delete" @onclick="@(e => ConfirmDeleteResult(@context))" RefBack="@subContext"></MatButton>
            </MatTooltip>
          </td>
        </MatTableRow>
      </MatTable>
    </div>

  </ContentTemplate>
</SpinLoader>

<div>
  <MatDialog @bind-IsOpen="@_deleteDialogIsOpen">
    <MatDialogTitle>Delete result?</MatDialogTitle>
    <MatDialogActions>
      <MatButton OnClick="@(e => { _deleteResult = null; _deleteDialogIsOpen = false; })">Cancel</MatButton>
      <MatButton OnClick="@DeleteResult">OK</MatButton>
    </MatDialogActions>
  </MatDialog>
</div>
