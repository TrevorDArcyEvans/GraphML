@page "/BrowseContact/{OrganisationId}/{OrganisationName}"

@using GraphML
@using System.Web;
@using GraphML.Interfaces.Server

@inject IContactServer _contactServer
@inject NavigationManager UriHelper

<h1>Repository Managers</h1>
@if (_contacts == null)
{
  <p><em>Loading...</em></p>
}
else
{
  <h2>@HttpUtility.UrlDecode(@OrganisationName)</h2>
  <ul class="list-group">
    @foreach (var contact in _contacts)
    {
      <li class="list-group-item">
        <span>@contact.Name</span>
      </li>
    }
  </ul>
}

@functions
{
  [Parameter]
  public string OrganisationName { get; set; }

  [Parameter]
  public string OrganisationId { get; set; }

  private IEnumerable<Contact> _contacts;

  protected override async Task OnInitializedAsync()
  {
    _contacts = await _contactServer.ByOwners(new[] { Guid.Parse(OrganisationId) });
  }
}
