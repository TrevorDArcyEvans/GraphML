@page "/About"

@using System.IO

@attribute [Authorize]

<b>About</b>
<p/>

<b>GraphML</b> uses components from:
<p/>
@{
  var lics = Directory.EnumerateFiles("Licenses", "*.txt").OrderBy(x => x);
  <MatAccordion>
    @foreach (var lic in lics)
    {
      var content = File.ReadAllText(lic);
      <MatExpansionPanel>
        <MatExpansionPanelSummary>
          <MatExpansionPanelHeader>
            @Path.GetFileNameWithoutExtension(lic)
          </MatExpansionPanelHeader>
        </MatExpansionPanelSummary>
        <MatExpansionPanelDetails>
          <MatTextField Value="@content" FullWidth="true" TextArea="true" ReadOnly="true" Outlined="true" Style="height: 600px" />
        </MatExpansionPanelDetails>
      </MatExpansionPanel>
    }
  </MatAccordion>
}
