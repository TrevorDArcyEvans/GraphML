@page "/BrowseNodes/{GraphName}/{GraphId}"

@using GraphML
@using GraphML.API.Server
@using System.Web;

@inject INodeServer _nodeServer
@inject Microsoft.AspNetCore.Components.IUriHelper UriHelper

<h1>Nodes</h1>
<h2>@HttpUtility.UrlDecode(GraphName)</h2>
<h3>TODO BrowseNodes</h3>
<button onclick="@((e) => BrowseGraph(@GraphName, @GraphId))">Back</button>

@functions
{
  [Parameter]
  private string GraphName { get; set; }

  [Parameter]
  private string GraphId { get; set; }

  private void BrowseGraph(string graphName, string graphId)
  {
    UriHelper.NavigateTo($"/BrowseGraph/{graphName}/{graphId}");
  }
}
