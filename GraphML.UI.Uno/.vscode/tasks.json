{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "buildLinux",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/GraphML.UI.Uno.Skia.Gtk/GraphML.UI.Uno.Skia.Gtk.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/GraphML.UI.Uno.Wasm/GraphML.UI.Uno.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "options": {
        "cwd": "${workspaceFolder}/GraphML.UI.Uno.Wasm"
      },
      "isBackground": true,
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/GraphML.UI.Uno.Wasm/GraphML.UI.Uno.Wasm.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
