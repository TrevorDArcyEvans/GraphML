<local:PageBase
    x:Class="GraphML.UI.Uno.RepositoryManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphML.UI.Uno"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Content>
        <StackPanel Orientation="Vertical">
            <ListView
                ItemsSource="{x:Bind RepositoryManagers, Mode=OneWay}"
                SelectedItem="{x:Bind SelectedRepositoryManager, Mode=TwoWay}"
                DisplayMemberPath="Name" />
            <Button
                Content="Go"
                Click="Repository_Click" />
            <Button
                Content="Back"
                Click="Back_Click" />
        </StackPanel>
    </Page.Content>

</local:PageBase>
