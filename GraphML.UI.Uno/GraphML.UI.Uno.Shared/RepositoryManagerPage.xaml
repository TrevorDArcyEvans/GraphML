<Page
    x:Class="GraphML.UI.Uno.Shared.RepositoryManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphML.UI.Uno.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical">
        <TextBlock 
            x:Name="SelectedOrganisation"
            TextWrapping="Wrap" />
        <ListView
            ItemsSource="{x:Bind RepositoryManagers, Mode=OneWay}"
            SelectedItem="{x:Bind SelectedRepositoryManager}"
            DisplayMemberPath="Name" />
        <Button
            Content="Back"
            Click="Back_Click" />
    </StackPanel>
</Page>
