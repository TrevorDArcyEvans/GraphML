<local:PageBase
    x:Class="GraphML.UI.Uno.RepositoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphML.UI.Uno"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:graphML="using:GraphML"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Content>
        <StackPanel Orientation="Vertical">
            <Grid>
                <TextBlock 
                    Text="Repositories" 
                    Margin="7 0 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="0 2 0 0" 
                    Margin="100 10 3 3" 
                    CornerRadius="0 5 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="2 0 2 2" 
                    Margin="3 10 3 3" 
                    CornerRadius="5">
                    <ListView Margin="10 10 10 10"
                        ItemsSource="{x:Bind Repositories, Mode=OneWay}"
                        SelectedItem="{x:Bind SelectedRepository, Mode=TwoWay}" 
                        DisplayMemberPath="Name" />
                </Border>
            </Grid>
            <Grid>
                <TextBlock 
                    Text="Repository Attributes" 
                    Margin="7 0 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="0 2 0 0" 
                    Margin="100 10 3 3" 
                    CornerRadius="0 5 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="2 0 2 2" 
                    Margin="3 10 3 3" 
                    CornerRadius="5">
                    <ListView 
                        Margin="10 10 10 10"
                        ItemsSource="{x:Bind RepositoryItemAttributes, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate 
                                x:DataType="graphML:ItemAttributeDefinition">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Name}" />
                                    <TextBlock Text=" --> " />
                                    <TextBlock Text="{x:Bind DataType}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
            <Grid>
                <TextBlock 
                    Text="Node Attributes" 
                    Margin="7 0 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="0 2 0 0" 
                    Margin="100 10 3 3" 
                    CornerRadius="0 5 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="2 0 2 2" 
                    Margin="3 10 3 3" 
                    CornerRadius="5">
                    <ListView Margin="10 10 10 10"
                        ItemsSource="{x:Bind NodeItemAttributes, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate 
                                x:DataType="graphML:ItemAttributeDefinition">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Name}" />
                                    <TextBlock Text=" --> " />
                                    <TextBlock Text="{x:Bind DataType}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>
            <Grid>
                <TextBlock 
                    Text="Edge Attributes" 
                    Margin="7 0 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="0 2 0 0" 
                    Margin="100 10 3 3" 
                    CornerRadius="0 5 0 0" />
                <Border 
                    BorderBrush="Black" 
                    BorderThickness="2 0 2 2" 
                    Margin="3 10 3 3" 
                    CornerRadius="5">
                    <ListView Margin="10 10 10 10"
                        ItemsSource="{x:Bind EdgeItemAttributes, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate 
                                x:DataType="graphML:ItemAttributeDefinition">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{x:Bind Name}" />
                                    <TextBlock Text=" --> " />
                                    <TextBlock Text="{x:Bind DataType}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <Button
                Content="Go"
                Click="Repository_Click" />
            <Button 
                Content="Back" 
                Click="Back_Click" />
        </StackPanel>
    </Page.Content>

</local:PageBase>
