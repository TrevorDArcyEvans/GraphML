<local:PageBase x:Class="GraphML.UI.Uno.OrganisationPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:local="using:GraphML.UI.Uno"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Content>
        <StackPanel Orientation="Vertical">
            <ListView 
                ItemsSource="{x:Bind Organisations, Mode=OneWay}"
                SelectedItem="{x:Bind SelectedOrganisation, Mode=TwoWay}" 
                DisplayMemberPath="Name" />
            <Button
                Content="Go"
                IsEnabled="{x:Bind SelectedOrganisation, Mode=OneWay, Converter={StaticResource ObjectToBool}}"
                Click="Organisation_Click" />
            <!-- TODO paging -->
            <Button 
                Content="Logout" 
                Click="Logout_Click" />
        </StackPanel>
    </Page.Content>

</local:PageBase>
