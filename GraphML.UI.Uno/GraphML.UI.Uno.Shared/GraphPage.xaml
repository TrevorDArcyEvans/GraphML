<local:PageBase
    x:Class="GraphML.UI.Uno.GraphPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraphML.UI.Uno"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Content>
        <StackPanel Orientation="Vertical">
            <ListView
                ItemsSource="{x:Bind Graphs, Mode=OneWay}"
                SelectedItem="{x:Bind SelectedGraph, Mode=TwoWay}"
                DisplayMemberPath="Name" />
            <Button
                Content="GraphNodes"
                IsEnabled="{x:Bind SelectedGraph, Mode=OneWay, Converter={StaticResource ObjectToBool}}"
                Click="GraphNodes_Click" />
            <Button
                Content="GraphEdges"
                IsEnabled="{x:Bind SelectedGraph, Mode=OneWay, Converter={StaticResource ObjectToBool}}"
                Click="GraphEdges_Click" />
            <!-- TODO paging -->
            <Button
                Content="Back"
                Click="Back_Click" />
        </StackPanel>
    </Page.Content>

</local:PageBase>
